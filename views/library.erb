<div class="max-w-4xl mx-auto mb-8">
  <div class="text-center">
    <h3 class="text-2xl font-bold text-gray-900 mb-4">Step 3</h3>
    <div class="w-full bg-gray-200 rounded-full h-2 mb-4">
      <div class="bg-secondary h-2 rounded-full w-2/3"></div>
    </div>
    <h5 class="text-xl font-semibold text-gray-700">Choose a library</h5>
  </div>
</div>

<div class="max-w-2xl mx-auto">
  <div class="space-y-4">
    <% @local_libraries.each do |library| %>
      <div class="bg-white border border-gray-200 rounded-lg shadow-sm overflow-hidden">
        <div class="flex items-center p-6">
          <div class="flex-shrink-0">
            <div class="w-12 h-12 bg-gray-100 rounded-full flex items-center justify-center">
              <svg class="w-6 h-6 text-brand" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.746 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
              </svg>
            </div>
          </div>
          <div class="ml-4 flex-1">
            <h4 class="text-lg font-medium text-gray-900"><%= library[1] %></h4>
          </div>
          <div class="ml-4">
            <form action="shelves/<%= @shelf_name %>/overdrive" method="post">
              <input type="hidden" name="consortium" value="<%= library[0] %>">
              <button class="inline-flex items-center justify-center w-10 h-10 bg-secondary hover:bg-secondary/80 text-white rounded-full transition-colors duration-200" type="submit" id="<%= library[0] %>" name="action">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
              </button>
            </form>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
