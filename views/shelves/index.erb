<div class="row">
  <div class="col l6 s12 offset-l3 m8 offset-m2">
    <h3>Step 1</h3>
    <div class="progress">
      <div class="determinate" style="width: 25%"></div>
    </div>
    <h5>Choose a shelf</h5>
  </div>
</div>
<%= will_paginate @posts %>
<div class="row">
  <% @shelves.sort_by { |_, count| -count }.each do |name, count| %>
    <div class="col s12 m6">
      <div class="card green lighten-5">
        <div class="card-content">
          <h6 class="card-title"><%= name %></h6>
          <p class="grey-text text-darken-1"><%= count %> book<%= 's' if count != 1 %></p>
        </div>
        <div class="card-action">
          <% if count.positive? %>
            <a class="maroon left" href="shelves/<%= name %>"><i class="material-icons right">bar_chart</i>Stats</a>
            <a class="maroon right modal-trigger" href="#modal-<%= name %>"><i class="material-icons right">import_contacts</i>get books</a>
          <% end %>
          <p></p>
        </div>
      </div>
    </div>


      <div id="modal-<%= name %>" class="modal small">
        <div class="modal-content">
          <h4 class="center"> &nbsp; Choose a format</h4>
          <br>
          <div class="row">
            <div class="col m6 offset-m2">
              <a href="/shelves/<%= name %>/overdrive" class="modal-close cyan btn-large waves-effect waves-green btn right">
                <i class="material-icons right">cloud_download</i>
                eBooks
              </a>
            </div>
          </div>
          <div class="row">
            <div class="col m6 offset-m2">
              <a href="/shelves/<%= name %>/bookmooch" class="modal-close btn-large waves-effect waves-green btn right">
                <i class="material-icons right">markunread_mailbox</i>
                By Mail
              </a>
            </div>
          </div>
        </div>
      </div>
    <% end %>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.2/js/materialize.min.js"></script>
<% if flash[:error] %>
  <script type="text/javascript">
    Materialize.toast("<%= flash[:error] %>", 4000)
  </script>
<% end %>

<script type="text/javascript">
  $(document).ready(function(){
    $('.modal').modal();
  });
</script>
