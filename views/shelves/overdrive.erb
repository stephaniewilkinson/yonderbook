<div class="max-w-4xl mx-auto mb-8">
  <div class="text-center">
    <h3 class="text-2xl font-bold text-gray-900 mb-4">Step 2</h3>
    <div class="w-full bg-gray-200 rounded-full h-2 mb-4">
      <div class="brand-secondary h-2 rounded-full" style="width: 50%"></div>
    </div>
    <h5 class="text-xl font-semibold text-gray-700">Find a library near you</h5>
  </div>
</div>

<div class="max-w-2xl mx-auto">
  <div class="bg-white border border-gray-200 rounded-lg shadow-sm p-6">
    <form action="/auth/library" method="post">
      <div class="mb-6">
        <label for="zipcode" class="block text-sm font-medium text-gray-700 mb-2">Enter your zip code:</label>
        <input type="text"
               id="zipcode"
               name="zipcode"
               autofocus
               pattern="[0-9]{5}"
               class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500"
               placeholder="12345">
      </div>
      <button class="w-full inline-flex items-center justify-center px-6 py-3 brand-secondary text-white font-semibold text-lg rounded-lg shadow-lg transition-colors duration-200"
              type="submit"
              name="action">
        <img src="/svg/location-marker.svg" alt="Location" class="w-5 h-5 mr-2">
        Find a library
      </button>
    </form>
  </div>
</div>
