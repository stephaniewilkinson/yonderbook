<!-- Flash Messages -->
<% if flash['error'] || flash['notice'] %>
  <div aria-live="assertive" class="pointer-events-none fixed inset-0 flex items-end px-4 py-6 sm:items-start sm:p-6 z-50">
    <div class="flex w-full flex-col items-center space-y-4 sm:items-end">
      <% if flash['error'] %>
        <div id="flash-error" class="pointer-events-auto w-full max-w-sm overflow-hidden rounded-lg bg-white shadow-lg ring-1 ring-black ring-opacity-5 transition-all duration-300 ease-out">
          <div class="p-4">
            <div class="flex items-start">
              <div class="flex-shrink-0">
                <img src="/svg/exclamation-triangle.svg" alt="Error" class="size-6 text-red-400">
              </div>
              <div class="ml-3 w-0 flex-1 pt-0.5">
                <p class="text-sm font-medium text-gray-900"><%= flash['error'] %></p>
              </div>
              <div class="ml-4 flex flex-shrink-0">
                <button type="button" onclick="document.getElementById('flash-error').remove()" class="inline-flex rounded-md bg-white text-gray-400 hover:text-gray-500 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2">
                  <span class="sr-only">Close</span>
                  <img src="/svg/x.svg" alt="Close" class="size-5">
                </button>
              </div>
            </div>
          </div>
        </div>
      <% end %>

      <% if flash['notice'] %>
        <div id="flash-notice" class="pointer-events-auto w-full max-w-sm overflow-hidden rounded-lg bg-white shadow-lg ring-1 ring-black ring-opacity-5 transition-all duration-300 ease-out">
          <div class="p-4">
            <div class="flex items-start">
              <div class="flex-shrink-0">
                <img src="/svg/check-circle.svg" alt="Success" class="size-6 text-green-400">
              </div>
              <div class="ml-3 w-0 flex-1 pt-0.5">
                <p class="text-sm font-medium text-gray-900"><%= flash['notice'] %></p>
              </div>
              <div class="ml-4 flex flex-shrink-0">
                <button type="button" onclick="document.getElementById('flash-notice').remove()" class="inline-flex rounded-md bg-white text-gray-400 hover:text-gray-500 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2">
                  <span class="sr-only">Close</span>
                  <img src="/svg/x.svg" alt="Close" class="size-5">
                </button>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
<% end %>
