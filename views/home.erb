<!-- Welcome Section -->
<div class="relative bg-white overflow-hidden rounded-3xl shadow-lg mb-8">
  <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="text-center">
      <h1 class="text-3xl sm:text-4xl font-bold text-gray-900 mb-4 font-coats">
        Welcome to Yonderbook!
      </h1>
      <p class="text-xl text-gray-600 mb-8 max-w-2xl mx-auto">
        You're all set up! Now let's connect your reading services to start finding your books for free.
      </p>
    </div>
  </div>
</div>

<!-- Services Section -->
<div class="grid md:grid-cols-2 gap-6 mb-8">
  <!-- Goodreads Service -->
  <div class="bg-white rounded-2xl shadow-lg p-6 border border-gray-100">
    <div class="flex items-start space-x-4">
      <div class="flex-shrink-0">
        <div class="w-12 h-12 bg-gradient-to-br from-amber-500 to-orange-600 rounded-xl flex items-center justify-center">
          <img src="/img/goodreads-icon.png" alt="Goodreads" class="w-8 h-8 filter brightness-0 invert">
        </div>
      </div>
      <div class="flex-1">
        <h3 class="text-lg font-bold text-gray-900 mb-2">Goodreads</h3>
        <p class="text-gray-600 mb-4">Import your reading lists, want-to-read books, and analyze your reading patterns.</p>

        <% if @user.goodreads_connected? %>
          <div class="flex items-center space-x-2 mb-3">
            <div class="w-2 h-2 bg-green-500 rounded-full"></div>
            <span class="text-sm font-medium text-green-700">Connected</span>
          </div>
          <a href="/auth/shelves" class="inline-flex items-center px-4 py-2 bg-brand text-white rounded-lg hover:bg-opacity-90 transition-all duration-200 font-medium">
            <img src="/svg/book.svg" alt="Shelves" class="w-4 h-4 mr-2 filter brightness-0 invert">
            View Your Shelves
          </a>
        <% else %>
          <div class="flex items-center space-x-2 mb-3">
            <div class="w-2 h-2 bg-gray-400 rounded-full"></div>
            <span class="text-sm font-medium text-gray-600">Not connected</span>
          </div>
          <a href="/connect-goodreads" class="inline-flex items-center px-4 py-2 bg-brand text-white rounded-lg hover:bg-opacity-90 transition-all duration-200 font-medium">
            <img src="/img/goodreads-icon.png" alt="Connect" class="w-4 h-4 mr-2 filter brightness-0 invert">
            Connect with Goodreads
            <img src="/svg/external-link.svg" alt="External link" class="w-4 h-4 ml-2 opacity-80 filter brightness-0 invert">
          </a>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Future Services -->
  <div class="bg-gray-50 rounded-2xl shadow-lg p-6 border border-gray-200">
    <div class="flex items-start space-x-4">
      <div class="flex-shrink-0">
        <div class="w-12 h-12 bg-gray-300 rounded-xl flex items-center justify-center">
          <svg class="w-6 h-6 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
          </svg>
        </div>
      </div>
      <div class="flex-1">
        <h3 class="text-lg font-bold text-gray-700 mb-2">More Services Coming Soon</h3>
        <p class="text-gray-500 mb-4">We're working on integrations with Libby and other reading platforms.</p>

        <div class="flex items-center space-x-2 mb-3">
          <div class="w-2 h-2 bg-amber-500 rounded-full"></div>
          <span class="text-sm font-medium text-amber-700">In Development</span>
        </div>
        <span class="inline-flex items-center px-4 py-2 bg-gray-200 text-gray-500 rounded-lg cursor-not-allowed font-medium">
          Coming Soon
        </span>
      </div>
    </div>
  </div>
</div>
